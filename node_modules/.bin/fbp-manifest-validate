#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../fbp-manifest/bin/fbp-manifest-validate" "$@"
  ret=$?
else 
  node  "$basedir/../fbp-manifest/bin/fbp-manifest-validate" "$@"
  ret=$?
fi
exit $ret
